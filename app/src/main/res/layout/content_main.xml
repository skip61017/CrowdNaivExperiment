<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mslab.experience.crowdnaivexperiment.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Step Count:0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Step_Count" />

        <TextView
            android:text="Orientation:0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Orientation" />

        <TextView
            android:text="Distance to destination:21m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_distance" />

        <TextView
            android:text="Distance to starting point:0m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Start" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_destination"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Destination :" />

            <EditText
                android:id="@+id/editText_dest"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLines="1"
                android:inputType="text"
                android:text="7-11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/button_bcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B1" />

            <Button
                android:id="@+id/button_bcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B2" />

            <Button
                android:id="@+id/button_bcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B3" />

            <Button
                android:id="@+id/button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done" />

            <Button
                android:id="@+id/button_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_stepLen" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Step length :" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="(m)"
                android:inputType="numberDecimal"
                android:text="0.7" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_PkData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PkData: " />

                <TextView
                    android:id="@+id/textView_Result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/drawLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:text="Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_Start" />
    </LinearLayout>
</RelativeLayout>
